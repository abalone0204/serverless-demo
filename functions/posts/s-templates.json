{
    "requestCreatePostTemplate": {
        "application/json": {
            "operation": "create",
            "tableName": "posts",
            "payload": {
                "Item": {
                    "content": "$input.json('$')"
                }
            }
        }
    },
    "requestReadPostTemplate": {
        "application/json": {
            "operation": "read",
            "tableName": "posts",
            "payload": {
                "Key": {
                    "id": "$input.params('id')"
                }
            }
        }

    },
    "requestUpdatePostTemplate": {
        "application/json": {
            "operation": "update",
            "tableName": "posts",
            "payload": {
                "Item": {
                    "id": "$input.params('id')",
                    "content": "$input.json('$')"
                }
            }
        }

    },
    "requestDestroyPostTemplate": {
        "application/json": {
            "operation": "destroy",
            "tableName": "posts",
            "payload": {
                "Key": {
                    "id": "$input.params('id')"
                }
            }
        }

    },
    "responseReadPostTemplate": {
        "application/json": {
            "post": {
                "id": "$input.path('$').Item.id",
                "content": {
                    "message": "$input.path('$').Item.content.message"
                }
            }
        }
    }
}