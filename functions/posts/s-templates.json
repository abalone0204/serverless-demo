{
    "requestCreatePostTemplate": {
        "application/json": {
            "operation": "create",
            "tableName": "posts",
            "payload": {
                "Item": {
                    "content": "$input.json('$')"
                }
            }
        }
    },
    "requestReadPostTemplate": {
        "application/json": {
            "operation": "read",
            "tableName": "posts",
            "payload": {
                "Key": {
                    "id": "$input.params('id')"
                }
            }
        }

    }
}